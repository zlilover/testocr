<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_card_activity_background"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/id_flyt_rooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sc.plugin.LFPreviewLayout
            android:id="@+id/id_plyt_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.sc.plugin.LFPreviewLayout>

        <FrameLayout
            android:id="@+id/id_vs_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/id_iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_card_activity_title"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/id_iv_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>